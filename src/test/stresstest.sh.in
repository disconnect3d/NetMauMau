let seed=0

if [ -n "$1" ]; then
  let seed=$1
fi

export GSL_RNG_TYPE=ranlxs2
export GSL_RNG_SEED=$seed

terminate() {
  echo
  echo "Seed: "$seed ;
  exit 0
}

trap terminate SIGINT SIGTERM

while(@check_PROGRAMS@); do
  let seed=seed+1 ;
  export GSL_RNG_SEED=$seed ;
done

echo
echo "Seed: "$seed ;
